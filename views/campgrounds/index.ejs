<% layout('layouts/boilerplate')%>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campgrounds</a>
</div>

<% for (let campground of campgrounds){%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%=campground.image%>">
            </div>
            <div class="col-md-5">
                <div class="card-body">
                    <div class="card-title"><%= campground.title %></div>
                    <p class="card-text"><%=campground.description%></p>
                    <p class="card-text">
                        <small class="text-muted"><%=campground.location%></small>
                    </p>
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View <%=campground.title%></a>
                </div>
            </div>
        </div>
    </div>
   <li><a href="campgrounds/<%= campground._id%>"> <%= campground.title%></a></li>
<%}%>

